<div id=top>
  <%= render 'top' %>
</div>

<div id=nav>
  <%= render 'side' %>
</div>

<div id = showcontent>
<div id = table>
	<div id = toprow>
		<div id = leftupper>
			<p>
				<strong>Apple Store:</strong>
				<%= @apps.appl_plat %><br>
				<weak>Price:</weak>
				<%= @apps.appl_price %><br>
				<weak>Version:</weak>
				<%= @apps.appl_vers %><br>
				<weak>Link:</weak>
				<%= @apps.appl_store %>
			</p>

			<p>
				<strong>Google Play Store:</strong>
				<%= @apps.andr_plat %><br>
				<weak>Price:</weak>
				<%= @apps.andr_price %><br>
				<weak>Version:</weak>
				<%= @apps.andr_vers %><br>
				<weak>Link:</weak>
				<%= @apps.andr_store %>
			</p>

			<p>
				<strong>Windows Store:</strong>
				<%= @apps.wind_plat %><br>
				<weak>Price:</weak>
				<%= @apps.wind_price %><br>
				<weak>Version:</weak>
				<%= @apps.wind_vers %><br>
				<weak>Link:</weak>
				<%= @apps.wind_store %>
			</p>
		</div>
	


		<div id = midupper>
			<p id = name>
				<strong><%= @apps.name %></strong>
			</p>
			<div id = applogo></div>
		</div>



		<div id = rightupper>
			<p>
				<strong>Developer:</strong>
				<%= @apps.developer %>
			</p>

			<p>
				<strong>Catagory:</strong>
				<%= @apps.catagory %>
			</p>
		</div>
	</div>
</div>
	
	
<div id = descriptionrow>
	<div id = drow>
		<p>
			<strong>Description:</strong>
		</p>
		<p style = margin-left:45px;>
			<%= @apps.description %>
		</p>
	</div>
</div>

<div id = picsrow>
  <h1>Screenshots</h1>

</div>

<div id = divider></div>

<div id = comments>
  
	<h1>Comments</h1>
<% @apps.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

  <h2>Add a comment:</h2>
<%= form_for([@apps, @apps.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>


</div>