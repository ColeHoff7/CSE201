			<a href="javascript:slidelink()"><img src="" id="slide0" width="500" height="400" style="PADDING-LEFT: 40px; PADDING-TOP: 73px"/></a>
			<script type="text/javascript">
			var step = 0
			var currentImage = 0
			function nextImage(){
			
				if (!document.images)
					return

				document.getElementById('slide0').src = hotAppsSlides[step].src		
				currentImage = step
	
				if(step<4){
					step++
				}
				else{
					step=0
				}
				setTimeout("nextImage()", 2500)
			}
			
			function slidelink(){
			
			if (currentImage == 0)
				window.location = "/apps/1"
			else if(currentImage == 1)
				window.location = "/apps/2"
			else if(currentImage == 2)
				window.location = "/apps/3"
			else if(currentImage == 3)
				window.location = "/apps/4"
			else if(currentImage == 4)
				window.location = "/apps/5"
				
			}
			
			nextImage()
			</script>
			
